{
  "name": "edge-boilerplate",
  "description": "Edge Boilerplate is a template for modern web applications. Part of the Edge Platform.",
  "version": "0.6.16",
  "main": "server/index.js",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "bin": {
    "react": "bin/react"
  },
  "files": [
    "bin/",
    "docs/",
    "lib/"
  ],
  "scripts": {
    "prepack": "npm run build && npm run styleguide:build && npm run storybook:build",
    "start": "edge start:dev",
    "build": "prepublish",
    "start:prod": "npm run build && bin/react",
    "test": "jest",
    "storybook": "start-storybook --port 1449 --config-dir __storybook__",
    "storybook:build": "rimraf docs/storybook && build-storybook --output-dir docs/storybook --config-dir __storybook__",
    "styleguide": "styleguidist server",
    "styleguide:build": "rimraf docs/styleguide && styleguidist build"
  },
  "keywords": [
    "front-end",
    "boilerplate",
    "webpack",
    "react"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "edge-express": "^0.1.10",
    "http-status-codes": "^1.3.0"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.14",
    "@storybook/addon-storyshots": "^3.2.14",
    "@storybook/react": "^3.2.14",
    "chalk-animation": "^1.3.0",
    "cookiesjs": "^1.4.2",
    "edge-builder": "^0.12.23",
    "edge-core": "^0.7.6",
    "edge-postcss": "^0.9.6",
    "edge-style": "^0.2.7",
    "gulp": "^3.9.1",
    "jest": "*",
    "jest-fetch-mock": "*",
    "prepublish": "*",
    "react-docgen": "^2.19.0",
    "react-styleguidist": "^6.0.32",
    "recompose": "^0.26.0",
    "redux-mock-store": "^1.3.0",
    "storybook-addon-scissors": "^3.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**.js"
    ],
    "coverageReporters": [
      "lcov",
      "json-summary",
      "json",
      "text"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|webp|svg|eot|otf|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|sss|pcss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.jest.js"
    ]
  }
}
