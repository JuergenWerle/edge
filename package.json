{
  "private": true,
  "devDependencies": {
    "eslint-config-readable": "^0.3.5",
    "lerna": "^2.5.1",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^6.0.0",
    "readable-cli": "^0.3.1",
    "stylelint-config-readable": "^0.1.1"
  },
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "update": "lerna exec ncu -- -ua && ncu -ua && yarn",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "test": "lerna run test",
    "build": "lerna run build && lerna link"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint",
    "*.sss": "stylelint"
  },
  "workspaces": [
    "packages/*"
  ]
}
