{
  "private": true,
  "devDependencies": {
    "lerna": "^2.5.1",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^4.3.0",
    "ncu": "^0.2.1"
  },
  "scripts": {
    "update": "lerna exec ncu -- -ua && lerna bootstrap",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "test": "lerna run test",
    "build:libs": "lerna run --stream --scope '**-*(common|express|useragent|style|postcss|core)' build",
    "build:builder": "lerna run --stream --scope edge-builder build && lerna link",
    "build:boilerplate": "lerna run --stream --scope edge-boilerplate build",
    "build": "npm run build:libs && npm run build:builder && npm run build:boilerplate"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint",
    "*.sss": "stylelint"
  },
  "workspaces": [
    "packages/*"
  ]
}
